---
interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "스마트뉴비", 
	description = "스마트뉴비 – 맞춤형 IT 솔루션으로 웹·앱 개발, AI 시스템 구축, 청년 채용 플랫폼까지 혁신을 제공합니다.",
} = Astro.props;

const siteURL = "https://smartnewbie.netlify.app"; // 실제 도메인으로 변경해주세요
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" as="style" crossorigin href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
		<meta name="description" content={description} />
		<meta name="author" content="김민우" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- OpenGraph 메타 태그 -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={siteURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${siteURL}/opengraph.png`} />
		
		<!-- Twitter 카드 -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${siteURL}/opengraph.png`} />
		
		<meta name="keywords" content="풀스택 개발자, 웹 개발, 서비스 업체, 외주개발, 웹개발업체, 웹개발, 앱개발, 앱개발업체, 국내외주, 개발" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={siteURL} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		padding: 8px 0;
		overflow-x: hidden;
	}

	@media screen and (min-width: 768px) {
		html,
		body {
			padding: 0 0;
		}
	}
</style>
